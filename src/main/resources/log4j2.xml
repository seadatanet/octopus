<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

	<Properties>
		<Property name="filename">octopus.log</Property>
	</Properties>



	<Appenders>

		<Console name="Console" target="SYSTEM_OUT" follow="true">
			<PatternLayout pattern="%d{HH:mm:ss} [octopus] %-5level %c{1} %L - %msg%n" /><!-- for debug only (%L cost)-->
<!-- 			<PatternLayout pattern="%d{HH:mm:ss} [octopus] %-5level %c{1} - %msg%n" /> -->
		</Console>
		<RollingFile name="RollingFile" fileName="logs/octopus.log"
			filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
			<PatternLayout>
				<Pattern>%d %p [octopus] %c{1} - %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="2 MB" />
			</Policies>
		</RollingFile>
	</Appenders>


	<Loggers>
		<Root level="info">
			<AppenderRef ref="Console" level="DEBUG" />
			<AppenderRef ref="RollingFile" level="DEBUG" />
		</Root>
	</Loggers>
</Configuration>