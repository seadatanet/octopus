<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration PUBLIC "-//SGGIPLE//DTD" "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss}|%-5p| %c:%L - %m%n" />
		</layout>
	</appender>

	<appender name="file" class="org.apache.log4j.RollingFileAppender">
		<!--  Nom du fichier -->
		<param name="File" value="logs/medatlasreader.log" />
		<!-- Taille max pour ce fichier -->
		<param name="MaxFileSize" value="512KB" />
		<!-- Nombre max de fichiers de logs. -->
		<param name="MaxBackupIndex" value="5" />
		<!-- Format des traces -->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss}|%-5p| %c:%L - %m%n" />
		</layout>
	</appender>

<!-- 	<logger name="fr.ifremer" additivity="false"> -->
<!-- 		<appender-ref ref="file" /> -->
<!-- 	</logger> -->
	
	

	<root>
		<priority value="info" />
		<appender-ref ref="stdout" />
	</root>
	
</log4j:configuration>