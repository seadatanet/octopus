<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.ifremer.octopus.view.RootController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="%menu.file">
            <items>
                  <MenuItem fx:id="menuOpenFile" mnemonicParsing="false" onAction="#openFile" text="%menu.file.openFile" />
                  <MenuItem fx:id="menuOpenDir" mnemonicParsing="false" onAction="#openDir" text="%menu.file.openDir" />
            	  <MenuItem fx:id="menuClose" mnemonicParsing="false" onAction="#handleExit" text="%menu.file.close" />
            </items>
          </Menu>
            <Menu fx:id="menuEdit" mnemonicParsing="false" text="%menu.edit">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#showPreferences" text="%menu.edit.preferences" />
                  <MenuItem mnemonicParsing="false" onAction="#showCoupling" text="%menu.edit.coupling" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="%menu.help">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#showManual" text="%menu.help.manual" />
              <MenuItem mnemonicParsing="false" onAction="#showAbout" text="%menu.help.about" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
